<div class="border mt-2">
    <div class="row">
        <h3 class="text-primary col-12 pl-4 pt-2">Grand Child Component</h3>
    </div>
    <div class="row">
        <p class="pl-4 ml-2">There is a message - @MessageForGrandChild</p>
        <p class="pl-4 ml-2">LuckyNumber - @MessageForGrandChild</p>
    </div>

</div>

@code
{
    [CascadingParameter(Name = "MessageFromGrandParent")]
    public string MessageForGrandChild { get; set; }

    [CascadingParameter(Name = "LuckNumberFromGrandParent")]
    public int LuckyNumberFromParent { get; set; }
}